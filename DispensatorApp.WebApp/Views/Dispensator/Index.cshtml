@model DispensatorApp.Database.ViewModel.DispensationModeViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="card mb-4 shadow-sm d-flex align-items-center justify-content-center text-center w-50">
    <div class="card-header bg-info w-100">
        <h4 class="my-0 font-weight-normal">Modo de Dispensacion</h4>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Dispensator" asp-action="Index">

            <select asp-for="DispensationMode">
                <option value="3">Eficiente</option>
                <option value="1">200 y 1000</option>
                <option value="2">100 y 500</option>
            </select>

            <button type="submit" class="btn btn-sm btn-block btn-primary">Ir</button>
        </form>
    </div>
</div>




